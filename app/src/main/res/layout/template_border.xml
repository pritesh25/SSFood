<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/img1"
        android:layout_width="@dimen/forty_dp"
        android:layout_height="@dimen/forty_dp"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/ten"
        app:layout_constraintBottom_toTopOf="@+id/img2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pizza_cutter" />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="@dimen/forty_dp"
        android:layout_height="@dimen/forty_dp"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/ten"
        app:layout_constraintBottom_toTopOf="@+id/img3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img1"
        app:srcCompat="@drawable/paprika_1" />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="@dimen/forty_dp"
        android:layout_height="@dimen/forty_dp"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/ten"
        app:layout_constraintBottom_toTopOf="@+id/img4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img2"
        app:srcCompat="@drawable/cheese" />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="@dimen/forty_dp"
        android:layout_height="@dimen/forty_dp"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/ten"
        app:layout_constraintBottom_toTopOf="@+id/img5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img3"
        app:srcCompat="@drawable/spoon_and_fork" />

    <ImageView
        android:id="@+id/img5"
        android:layout_width="@dimen/forty_dp"
        android:layout_height="@dimen/forty_dp"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/ten"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img4"
        app:srcCompat="@drawable/carrot" />

    <ImageView
        android:id="@+id/img6"
        android:layout_width="@dimen/forty_dp"
        android:layout_height="@dimen/forty_dp"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/ten"
        app:layout_constraintBottom_toTopOf="@+id/img7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tea_cup" />

    <ImageView
        android:id="@+id/img7"
        android:layout_width="@dimen/forty_dp"
        android:layout_height="@dimen/forty_dp"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/ten"
        app:layout_constraintBottom_toTopOf="@+id/img8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img6"
        app:srcCompat="@drawable/mortar" />

    <ImageView
        android:id="@+id/img8"
        android:layout_width="@dimen/forty_dp"
        android:layout_height="@dimen/forty_dp"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/ten"
        app:layout_constraintBottom_toTopOf="@+id/img9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img7"
        app:srcCompat="@drawable/pot" />

    <ImageView
        android:id="@+id/img9"
        android:layout_width="@dimen/forty_dp"
        android:layout_height="@dimen/forty_dp"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/ten"
        app:layout_constraintBottom_toTopOf="@+id/img10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img8"
        app:srcCompat="@drawable/refrigerator" />

    <ImageView
        android:id="@+id/img10"
        android:layout_width="@dimen/forty_dp"
        android:layout_height="@dimen/forty_dp"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/ten"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img9"
        app:srcCompat="@drawable/paprika_2" />

    <ImageView
        android:id="@+id/img11"
        android:layout_width="@dimen/forty_dp"
        android:layout_height="@dimen/forty_dp"
        android:contentDescription="@string/app_name"

        android:padding="@dimen/ten"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img12"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/measuring_spoons" />

    <ImageView
        android:id="@+id/img12"
        android:layout_width="@dimen/forty_dp"
        android:layout_height="@dimen/forty_dp"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/ten"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img13"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img11"
        app:srcCompat="@drawable/corkscrew" />


    <ImageView
        android:id="@+id/img13"
        android:layout_width="@dimen/forty_dp"
        android:layout_height="@dimen/forty_dp"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/ten"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/img12"
        app:srcCompat="@drawable/grater" />

    <TextView
        android:id="@+id/stepTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/five_dp"
        android:scrollbars="vertical"
        android:text="@string/huge"
        android:textSize="@dimen/twenty_sp"
        app:layout_constraintBottom_toTopOf="@+id/img12"
        app:layout_constraintEnd_toStartOf="@+id/img8"
        app:layout_constraintStart_toEndOf="@+id/img3"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>